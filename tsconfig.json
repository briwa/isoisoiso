{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": false,
    "target": "es6",
    "experimentalDecorators": true
  },
  "include": [
    "./src/app/**/*.ts",
    "./test/**/*.ts",
    "./src/types/*.ts",
  ]
}